<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@drawable/bluesky"
    android:id="@+id/layoutdashboardfragment"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/tv_checklogin"
        android:layout_gravity="right|top"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn_scan_logo"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/qrlogotransparent"
        android:text="QR Scan"
        android:focusable="false"
        android:layout_gravity="center"
        android:layout_marginTop="200dp" />

    <Button
        android:id="@+id/btn_login"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/loginasuserbig"
        android:text="Login"
        android:focusable="true"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp" />






</GridLayout>